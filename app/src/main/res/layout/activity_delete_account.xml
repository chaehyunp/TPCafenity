<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.DeleteAccountActivity">

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_check"
        android:layout_above="@id/tv_delete_done"/>

    <TextView
        android:id="@+id/tv_delete_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:text="탈퇴되었습니다"
        android:includeFontPadding="false"
        android:layout_marginTop="24dp"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이용해주셔서 감사합니다"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textColor="@color/blk300"
        android:layout_below="@+id/tv_delete_done"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>