<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    tools:context=".activities.LoginActivity">

    <TextView
        android:id="@+id/tv_catch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커피를 즐기는 새로운 방법,"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/img_logotype_onlylogo"
        android:layout_below="@id/tv_catch"/>

    <LinearLayout
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="이메일 아이디"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:textSize="16sp"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="16dp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_pw"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="비밀번호"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_btn_line"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:gravity="center"
        android:layout_below="@+id/layout_input"
        android:text="이메일 로그인"
        android:textColor="@color/black"
        android:textSize="16sp" />


        <RelativeLayout
            android:id="@+id/btn_login_kakao"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_btn_kakao"
            android:padding="16dp"
            android:layout_below="@+id/btn_login">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_centerVertical="true"
                android:src="@drawable/img_kakao_bubble"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                android:text="카카오 로그인"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </RelativeLayout>





    <LinearLayout
        android:id="@+id/layout_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tv_if"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:text="아직 계정이 없으신가요?"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/btn_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:layout_toRightOf="@+id/tv_if"
            android:layout_marginLeft="8dp"
            android:text="이메일로 가입하기"
            android:textColor="@color/hightlight"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>