<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/tv_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:includeFontPadding="false"
        android:text="아메리카노"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="661m"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:includeFontPadding="false"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:layout_below="@+id/tv_place_name"
        android:layout_marginBottom="8dp"
        android:layout_alignLeft="@+id/tv_place_name"
        android:drawableStart="@drawable/icon_location"
        android:drawableTint="@color/black"
        android:drawablePadding="4dp"/>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textSize="12sp"
        android:textColor="@color/blk600"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="서울 성동구 마조로 15-11, 2층 (행당동)"
        android:layout_toRightOf="@+id/tv_distance"
        android:layout_alignBaseline="@+id/tv_distance"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/tv_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:layout_below="@+id/tv_distance"
        android:includeFontPadding="false"
        android:text="010-1234-5678"
        android:textColor="@color/hightlight"
        android:textSize="14sp"
        android:layout_alignLeft="@+id/tv_distance"/>

    <ImageView
        android:id="@+id/dl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/devide_line"
        android:layout_below="@+id/tv_tel"
        android:layout_marginTop="12dp"/>

    <ToggleButton
        android:id="@+id/toggle_mark"
        android:layout_width="38dp"
        android:layout_height="32dp"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/selector_mark"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="24dp"/>


</RelativeLayout>